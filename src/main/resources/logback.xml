<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-4relative %-5level - %msg %n</pattern>
        </encoder>
    </appender>

    <timestamp key="bySecond" datePattern="MM-dd-yyyy@HH:mm:ss"/>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>/tmp/varexc.log</file>
        <append>true</append>
        <immediateFlush>true</immediateFlush>
        <encoder>
            <pattern>%msg %n</pattern>
        </encoder>
    </appender>

    <logger name="varexc" additivity="false">
        <level>INFO</level>
        <appender-ref ref="FILE"/>
    </logger>

    <root level="ERROR">
        <appender-ref ref="STDOUT"/>
    </root>

    <!--<logger namek="" level=""/>-->
</configuration>